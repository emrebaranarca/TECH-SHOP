extends ../layouts/main-layout.pug
block content
    form(action="/admin/products" method="POST")
 
        input(type="hidden" name="id" value=`${products.id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label products Name
            .col-sm-10
                input.form-control#name(type="text" name="name"  value=`${products.name}`)  

        .form-group.row
            label(for="price").col-sm-2.col-form-label Price
            .col-sm-10
                input.form-control#price(type="text" name="price"  value=`${products.price}`) 

        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Image
            .col-sm-10
                input.form-control#image(type="text" name="image"  value=`${products.image}`) 

        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10") #{products.description}
        
        .form-group.row
            label.col-sm-2.col-form-label(for='categoryid') categoryid
            .col-sm-10
                select#categoryid.form-control(name='categoryid')
                    option(value="-1") Select Category 
                    each catego in category 
                        option(value=`${catego.id}`,selected=catego.id===products.categoryId ) #{catego.name} 

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save products").btn.btn-primary 
