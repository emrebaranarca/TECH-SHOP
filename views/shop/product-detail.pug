extends ../layouts/main-layout.pug
block content
    
    .row
        .col-md-4
            img(src=`/img/${products.image}` alt=`${products.description}`).img-fluid
        .col-md-8.pl-4
            h1 #{products.name}
            hr
            p #{products.description}
            br
            p price: #{products.price}
            button(type="submit").btn.btn-primary.btn-lg Add to Cart